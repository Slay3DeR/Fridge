    <script>
        // הפניה אוטומטית לאתר הרכישה עם טיימר
        let countdown = 5; // זמן שניות לפני המעבר
        function updateCountdown() {
            document.getElementById("countdown").innerText = countdown;
            countdown--;
            if (countdown < 0) {
                window.location.href = "https://s.click.aliexpress.com/e/_olMaHHC"; // עדכון הקישור
            } else {
                setTimeout(updateCountdown, 1000);
            }
        }
        document.addEventListener("DOMContentLoaded", function() {
            setTimeout(updateCountdown, 1000);
        });
    </script>

